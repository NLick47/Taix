<ResourceDictionary xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:UI.Controls.Base">  
	
  <ControlTheme x:Key="{x:Type controls:Icon}" 
				TargetType="controls:Icon">
	  <Setter Property="MinWidth" Value="18"/>
	  <Setter Property="MinHeight" Value="18"/>
	  <Setter Property="FontSize" Value="16"/>
	  <Setter Property="FontFamily" Value="avares://Taix/Resources/Fonts/#Segoe Fluent Icons"/>
	  <Setter Property="Background" Value="Transparent"/>
    <Setter Property="Template">
      <ControlTemplate>
		  <TextBlock Text="{TemplateBinding Unicode}"
							 FontFamily="{TemplateBinding FontFamily}"
							 FontSize="{TemplateBinding FontSize}"
							 VerticalAlignment="Center" HorizontalAlignment="Center"/>
      </ControlTemplate>
    </Setter>
  </ControlTheme>
</ResourceDictionary>
